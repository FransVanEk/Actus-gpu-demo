<Window x:Class="ActusDesk.App.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About ActusDesk" 
        Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="ActusDesk" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="#E0E0E0" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="GPU-Accelerated ACTUS Contract Valuation" 
                          FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                    <Run Text="A high-performance desktop application for valuing ACTUS contracts using GPU acceleration via ILGPU. "/>
                    <Run Text="Built with .NET 8, C# 12, WPF, and CUDA support."/>
                </TextBlock>

                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20"
                       Background="White">
                    <StackPanel>
                        <TextBlock Text="GPU Device Information" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Device Name:" Grid.Row="0" Grid.Column="0" Margin="0,0,0,5"/>
                            <TextBlock x:Name="GpuNameText" Text="N/A" Grid.Row="0" Grid.Column="1" 
                                      FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <TextBlock Text="Memory:" Grid.Row="1" Grid.Column="0" Margin="0,0,0,5"/>
                            <TextBlock x:Name="GpuMemoryText" Text="N/A" Grid.Row="1" Grid.Column="1" 
                                      FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <TextBlock Text="Type:" Grid.Row="2" Grid.Column="0" Margin="0,0,0,5"/>
                            <TextBlock x:Name="GpuTypeText" Text="N/A" Grid.Row="2" Grid.Column="1" 
                                      FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <TextBlock Text="Max Threads/Block:" Grid.Row="3" Grid.Column="0"/>
                            <TextBlock x:Name="GpuMaxThreadsText" Text="N/A" Grid.Row="3" Grid.Column="1" 
                                      FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15"
                       Background="White">
                    <StackPanel>
                        <TextBlock Text="Build Configuration" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Target Framework:" Grid.Row="0" Grid.Column="0" Margin="0,0,0,5"/>
                            <TextBlock Text=".NET 8.0" Grid.Row="0" Grid.Column="1" FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <TextBlock Text="Language:" Grid.Row="1" Grid.Column="0" Margin="0,0,0,5"/>
                            <TextBlock Text="C# 12" Grid.Row="1" Grid.Column="1" FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <TextBlock Text="FP Mode:" Grid.Row="2" Grid.Column="0"/>
                            <TextBlock Text="FP32 (Default)" Grid.Row="2" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <TextBlock Text="Â© 2024 ActusDesk. MIT License." VerticalAlignment="Center" Foreground="Gray"/>
                <Button Content="Close" HorizontalAlignment="Right" Padding="30,8" 
                       IsDefault="True" Click="CloseButton_Click"
                       Background="{StaticResource PrimaryBrush}" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>
