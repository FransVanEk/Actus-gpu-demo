<Window x:Class="ActusDesk.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ActusDesk.App.Views"
        Title="{Binding Title}" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <local:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter"/>
        
        <!-- Styles -->
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="InfoStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Workspace..." Click="OpenWorkspace_Click"/>
                <MenuItem Header="_Save Workspace..." Click="SaveWorkspace_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_GPU Status" Click="ShowGpuStatus_Click"/>
                <MenuItem Header="_Cache Manager" Click="ShowCacheManager_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Click="ShowDocs_Click"/>
                <Separator/>
                <MenuItem Header="_About ActusDesk" Click="ShowAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ActusDesk" FontSize="24" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="GPU-Accelerated ACTUS Valuation" FontSize="14" 
                              Foreground="#E0E0E0" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="2" Margin="10" Background="White">
            <TabItem Header="Workspace">
                <TabItem.DataContext>
                    <Binding Path="DataContext.WorkspaceViewModel" RelativeSource="{RelativeSource AncestorType=Window}"/>
                </TabItem.DataContext>
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Workspace" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Load contract portfolios, manage cache, and prepare data for valuation."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <TextBlock Text="Data Sources" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Contracts:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Grid.Column="1" Margin="0,0,10,0" 
                                            Text="{Binding ContractsFilePath, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Grid.Column="2" Content="Browse..." Padding="10,5"
                                           Command="{Binding BrowseContractsCommand}"/>
                                </Grid>
                                
                                <Button Content="Load Contracts" Margin="0,15,0,0" Padding="20,10"
                                       Background="{StaticResource PrimaryBrush}" Foreground="White"
                                       HorizontalAlignment="Left"
                                       Command="{Binding LoadContractsCommand}"
                                       IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
                                
                                <Separator Margin="0,20,0,20"/>
                                
                                <TextBlock Text="Mock Contract Generator" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Total Contracts:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding TotalMockContracts, UpdateSourceTrigger=PropertyChanged}" 
                                            Width="150" HorizontalAlignment="Left"/>
                                </Grid>
                                
                                <TextBlock Text="Contract Distribution" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="PAM:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                                    <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="100" 
                                           Value="{Binding PamPercentage, Mode=TwoWay}" 
                                           TickFrequency="5" IsSnapToTickEnabled="True"
                                           Margin="5,0"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" 
                                              Text="{Binding PamPercentage, StringFormat='{}{0:F0}%'}" 
                                              VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Text="ANN:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <Slider Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="100" 
                                           Value="{Binding AnnPercentage, Mode=TwoWay}" 
                                           TickFrequency="5" IsSnapToTickEnabled="True"
                                           Margin="5,10,5,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" 
                                              Text="{Binding AnnPercentage, StringFormat='{}{0:F0}%'}" 
                                              VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                                </Grid>
                                
                                <Button Content="Generate Mock Contracts" Margin="0,15,0,0" Padding="20,10"
                                       Background="{StaticResource AccentBrush}" Foreground="White"
                                       HorizontalAlignment="Left"
                                       Command="{Binding LoadMockContractsCommand}"
                                       IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
                                
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Foreground="Green" Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                        <Run Text="Status: "/>
                                        <Run Text="{Binding StatusMessage}"/>
                                    </TextBlock>
                                    <TextBlock Text="Loading..." Foreground="Orange" 
                                              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <StackPanel Visibility="{Binding ContractCount, Converter={StaticResource ZeroToCollapsedConverter}}"
                                               Margin="0,5,0,0">
                                        <TextBlock FontWeight="SemiBold">
                                            <Run Text="Total Contracts: "/>
                                            <Run Text="{Binding ContractCount, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Margin="10,2,0,0">
                                            <Run Text="PAM: "/>
                                            <Run Text="{Binding PamContractCount, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Margin="10,2,0,0">
                                            <Run Text="ANN: "/>
                                            <Run Text="{Binding AnnContractCount, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Portfolio">
                <TabItem.DataContext>
                    <Binding Path="DataContext.PortfolioViewModel" RelativeSource="{RelativeSource AncestorType=Window}"/>
                </TabItem.DataContext>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <StackPanel>
                            <!-- Header -->
                            <Grid>
                                <TextBlock Text="Portfolio" Style="{StaticResource HeaderStyle}"/>
                                <Button Content="â†» Refresh" HorizontalAlignment="Right" Padding="10,5"
                                       Command="{Binding RefreshStatisticsCommand}"
                                       Background="{StaticResource PrimaryBrush}" Foreground="White"/>
                            </Grid>
                            <TextBlock Text="View aggregated portfolio statistics and per-type contract analysis." 
                                      Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                            
                            <!-- Empty State -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="30" Margin="0,20,0,0"
                                   Background="{StaticResource SurfaceBrush}"
                                   Visibility="{Binding HasContracts, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="No contracts loaded" FontSize="18" FontWeight="SemiBold" 
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Load contracts from the Workspace tab to see portfolio overview, per-type statistics, and valuation coverage." 
                                              TextWrapping="Wrap" MaxWidth="500" HorizontalAlignment="Center"
                                              Margin="0,10,0,0" TextAlignment="Center" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Portfolio Content -->
                            <StackPanel Visibility="{Binding HasContracts, Converter={StaticResource BoolToVisibilityConverter}}">
                                <!-- Portfolio-Level Summary -->
                                <Border BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="2" Padding="15" Margin="0,20,0,0"
                                       Background="{StaticResource SurfaceBrush}">
                                    <StackPanel>
                                        <TextBlock Text="Portfolio Summary" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Total Contracts" FontWeight="SemiBold" Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding TotalContracts, StringFormat='{}{0:N0}'}" FontSize="24" FontWeight="Bold" 
                                                          Foreground="{StaticResource PrimaryBrush}"/>
                                                
                                                <TextBlock Text="Contract Types" FontWeight="SemiBold" Foreground="Gray" FontSize="12" Margin="0,10,0,0"/>
                                                <TextBlock Text="{Binding DistinctContractTypes}" FontSize="16"/>
                                                
                                                <TextBlock Text="Readiness" FontWeight="SemiBold" Foreground="Gray" FontSize="12" Margin="0,10,0,0"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding ReadinessPercentage}" FontSize="16" Foreground="Green"/>
                                                    <TextBlock Text="{Binding ReadyCount, StringFormat=' ({0:N0} ready)'}" FontSize="12" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Bottom"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Margin="10,0">
                                                <TextBlock Text="Total Notional" FontWeight="SemiBold" Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding TotalNotional}" FontSize="20" FontWeight="Bold"/>
                                                
                                                <TextBlock Text="Average Notional" FontWeight="SemiBold" Foreground="Gray" FontSize="12" Margin="0,10,0,0"/>
                                                <TextBlock Text="{Binding AverageNotional}" FontSize="16"/>
                                                
                                                <TextBlock Text="Median Notional" FontWeight="SemiBold" Foreground="Gray" FontSize="12" Margin="0,10,0,0"/>
                                                <TextBlock Text="{Binding MedianNotional}" FontSize="16"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                                <TextBlock Text="Min Notional" FontWeight="SemiBold" Foreground="Gray" FontSize="12"/>
                                                <TextBlock Text="{Binding MinNotional}" FontSize="16"/>
                                                
                                                <TextBlock Text="Max Notional" FontWeight="SemiBold" Foreground="Gray" FontSize="12" Margin="0,10,0,0"/>
                                                <TextBlock Text="{Binding MaxNotional}" FontSize="16"/>
                                                
                                                <TextBlock Text="Top Currencies" FontWeight="SemiBold" Foreground="Gray" FontSize="12" Margin="0,10,0,0"/>
                                                <TextBlock Text="{Binding TopCurrencies}" FontSize="12" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                
                                <!-- PAM Contract Type -->
                                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,15,0,0"
                                       Background="White" Visibility="{Binding PamCount, Converter={StaticResource ZeroToCollapsedConverter}}">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <TextBlock Text="PAM (Principal at Maturity)" FontSize="16" FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding PamCount, StringFormat='{}{0:N0} contracts'}" FontSize="12" Foreground="Gray"/>
                                                <TextBlock Text="{Binding PamPercentage, StringFormat=' ({0})'}" FontSize="12" Foreground="Gray"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Valuation Readiness" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                                <TextBlock Margin="5,0,0,0">
                                                    <Run Text="âœ“ Ready: "/>
                                                    <Run Text="{Binding PamReadyCount, StringFormat='{}{0:N0}'}" Foreground="Green"/>
                                                    <Run Text="{Binding PamReadyPercentage, StringFormat=' ({0})'}" Foreground="Green"/>
                                                </TextBlock>
                                                <TextBlock Margin="5,2,0,0">
                                                    <Run Text="âš  Incomplete: "/>
                                                    <Run Text="{Binding PamIncompleteCount, StringFormat='{}{0:N0}'}" Foreground="Orange"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Margin="10,0">
                                                <TextBlock Text="Economic Summary" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                                <TextBlock Margin="5,0,0,0">
                                                    <Run Text="Total Notional: "/>
                                                    <Run Text="{Binding PamTotalNotional}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <TextBlock Margin="5,2,0,0">
                                                    <Run Text="Avg Notional: "/>
                                                    <Run Text="{Binding PamAverageNotional}"/>
                                                </TextBlock>
                                                <TextBlock Margin="5,2,0,0">
                                                    <Run Text="Avg Rate: "/>
                                                    <Run Text="{Binding PamAverageRate}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                                <TextBlock Text="Maturity Range" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding PamMaturityRange}" FontSize="11" TextWrapping="Wrap" Margin="5,0,0,0"/>
                                                
                                                <TextBlock Text="Data Quality" FontWeight="SemiBold" FontSize="12" Margin="0,10,0,5"/>
                                                <TextBlock Text="{Binding PamDataQuality}" FontSize="11" TextWrapping="Wrap" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                
                                <!-- ANN Contract Type -->
                                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,15,0,0"
                                       Background="White" Visibility="{Binding AnnCount, Converter={StaticResource ZeroToCollapsedConverter}}">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <TextBlock Text="ANN (Annuity)" FontSize="16" FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding AnnCount, StringFormat='{}{0:N0} contracts'}" FontSize="12" Foreground="Gray"/>
                                                <TextBlock Text="{Binding AnnPercentage, StringFormat=' ({0})'}" FontSize="12" Foreground="Gray"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Valuation Readiness" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                                <TextBlock Margin="5,0,0,0">
                                                    <Run Text="âœ“ Ready: "/>
                                                    <Run Text="{Binding AnnReadyCount, StringFormat='{}{0:N0}'}" Foreground="Green"/>
                                                    <Run Text="{Binding AnnReadyPercentage, StringFormat=' ({0})'}" Foreground="Green"/>
                                                </TextBlock>
                                                <TextBlock Margin="5,2,0,0">
                                                    <Run Text="âš  Incomplete: "/>
                                                    <Run Text="{Binding AnnIncompleteCount, StringFormat='{}{0:N0}'}" Foreground="Orange"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Margin="10,0">
                                                <TextBlock Text="Economic Summary" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                                <TextBlock Margin="5,0,0,0">
                                                    <Run Text="Total Notional: "/>
                                                    <Run Text="{Binding AnnTotalNotional}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <TextBlock Margin="5,2,0,0">
                                                    <Run Text="Avg Notional: "/>
                                                    <Run Text="{Binding AnnAverageNotional}"/>
                                                </TextBlock>
                                                <TextBlock Margin="5,2,0,0">
                                                    <Run Text="Avg Rate: "/>
                                                    <Run Text="{Binding AnnAverageRate}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                                <TextBlock Text="Maturity Range" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding AnnMaturityRange}" FontSize="11" TextWrapping="Wrap" Margin="5,0,0,0"/>
                                                
                                                <TextBlock Text="Data Quality" FontWeight="SemiBold" FontSize="12" Margin="0,10,0,5"/>
                                                <TextBlock Text="{Binding AnnDataQuality}" FontSize="11" TextWrapping="Wrap" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Scenarios">
                <TabItem.DataContext>
                    <Binding Path="DataContext.ScenariosViewModel" RelativeSource="{RelativeSource AncestorType=Window}"/>
                </TabItem.DataContext>
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Scenarios" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Define rate shocks and portfolio operations."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <Button Content="Load Default Scenarios" Padding="15,8" 
                                       Background="{StaticResource PrimaryBrush}" Foreground="White"
                                       HorizontalAlignment="Left" Margin="0,0,0,15"
                                       Command="{Binding LoadDefaultScenariosCommand}"/>
                                
                                <TextBlock Text="Available Scenarios:" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ScenarioCount, StringFormat='{}{0} scenarios loaded'}" 
                                          Margin="0,5,0,10" Foreground="Green"
                                          Visibility="{Binding ScenarioCount, Converter={StaticResource ZeroToCollapsedConverter}}"/>
                                <ListBox Height="200" Margin="0,10,0,0">
                                    <ListBoxItem>Base Case (no rate changes)</ListBoxItem>
                                    <ListBoxItem>Rate +50 bps (parallel bump)</ListBoxItem>
                                    <ListBoxItem>Rate -50 bps (parallel bump)</ListBoxItem>
                                </ListBox>
                                <TextBlock Text="{Binding StatusMessage}" Margin="0,10,0,0" Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Reporting">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Reporting" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Configure outputs, groupings, and export formats."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <TextBlock Text="Outputs" FontWeight="SemiBold"/>
                                <CheckBox Content="Present Value (PV)" IsChecked="True" Margin="0,10,0,5"/>
                                <CheckBox Content="DV01" IsChecked="True" Margin="0,0,0,5"/>
                                <CheckBox Content="Cashflow by Month" IsChecked="False"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Run Console">
                <TabItem.DataContext>
                    <Binding Path="DataContext.RunConsoleViewModel" RelativeSource="{RelativeSource AncestorType=Window}"/>
                </TabItem.DataContext>
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Run Console" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Execute valuations and view performance metrics."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <TextBlock Text="Valuation Settings" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="Valuation Period (Years):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ValuationYears, UpdateSourceTrigger=PropertyChanged}" 
                                            Width="100" HorizontalAlignment="Left"/>
                                    
                                    <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                             Content="Export results to CSV" 
                                             IsChecked="{Binding ExportToCsv}" 
                                             Margin="0,10,0,5"/>
                                    
                                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,0,0,0"
                                         Visibility="{Binding ExportToCsv, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="CSV Path:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBox Grid.Column="1" Text="{Binding CsvOutputPath, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </Grid>
                                
                                <Button Content="â–¶ Start Valuation" Padding="30,15" FontSize="16" FontWeight="SemiBold"
                                       Background="{StaticResource AccentBrush}" Foreground="White"
                                       HorizontalAlignment="Left"
                                       Command="{Binding RunValuationCommand}"
                                       IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                                
                                <TextBlock Text="{Binding StatusMessage}" Margin="0,15,0,0" FontWeight="SemiBold" Foreground="Green"/>
                                
                                <TextBlock Text="Results" FontWeight="SemiBold" Margin="0,20,0,10"/>
                                <Border BorderBrush="LightGray" BorderThickness="1" Background="White">
                                    <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding Results}" Padding="10" FontFamily="Consolas" FontSize="12"/>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8F8F8" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="GPU: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding GpuName}" VerticalAlignment="Center" Margin="5,0,20,0" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="VRAM: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding GpuMemoryStatus}" VerticalAlignment="Center" Margin="5,0,10,0" Foreground="Green"/>
                    <TextBlock Text="Utilization: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding GpuUtilizationPercent, StringFormat='{}{0:F1}%'}" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Orange"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
