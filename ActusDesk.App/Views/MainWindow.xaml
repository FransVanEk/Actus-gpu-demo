<Window x:Class="ActusDesk.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="InfoStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Workspace..." Click="OpenWorkspace_Click"/>
                <MenuItem Header="_Save Workspace..." Click="SaveWorkspace_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_GPU Status" Click="ShowGpuStatus_Click"/>
                <MenuItem Header="_Cache Manager" Click="ShowCacheManager_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Click="ShowDocs_Click"/>
                <Separator/>
                <MenuItem Header="_About ActusDesk" Click="ShowAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ActusDesk" FontSize="24" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="GPU-Accelerated ACTUS Valuation" FontSize="14" 
                              Foreground="#E0E0E0" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="2" Margin="10" Background="White">
            <TabItem Header="Workspace">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Workspace" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Load contract portfolios, manage cache, and prepare data for valuation."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <TextBlock Text="Data Sources" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Contracts:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Grid.Column="1" Margin="0,0,10,0" 
                                            Text="data/tests/sample_contracts.json"/>
                                    <Button Grid.Column="2" Content="Browse..." Padding="10,5"/>
                                </Grid>
                                
                                <Button Content="Load Contracts" Margin="0,15,0,0" Padding="20,10"
                                       Background="{StaticResource PrimaryBrush}" Foreground="White"
                                       HorizontalAlignment="Left"/>
                                
                                <TextBlock Text="Status: Ready" Margin="0,15,0,0" Foreground="Green"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Portfolio">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Portfolio" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="View and analyze loaded contracts." 
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <TextBlock Text="Contract Count: 0" FontWeight="SemiBold"/>
                                <TextBlock Text="Total Notional: $0" Margin="0,5,0,0"/>
                                <TextBlock Text="Average Maturity: N/A" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Scenarios">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Scenarios" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Define rate shocks and portfolio operations."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <TextBlock Text="Available Scenarios:" FontWeight="SemiBold"/>
                                <ListBox Height="200" Margin="0,10,0,0">
                                    <ListBoxItem>Base (no shocks)</ListBoxItem>
                                    <ListBoxItem>Rate +50 bps</ListBoxItem>
                                    <ListBoxItem>Rate -100 bps</ListBoxItem>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Reporting">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Reporting" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Configure outputs, groupings, and export formats."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <TextBlock Text="Outputs" FontWeight="SemiBold"/>
                                <CheckBox Content="Present Value (PV)" IsChecked="True" Margin="0,10,0,5"/>
                                <CheckBox Content="DV01" IsChecked="True" Margin="0,0,0,5"/>
                                <CheckBox Content="Cashflow by Month" IsChecked="False"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Run Console">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Run Console" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="Execute valuations and view performance metrics."
                                  Style="{StaticResource InfoStyle}" Foreground="Gray"/>
                        
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,20,0,0"
                               Background="{StaticResource SurfaceBrush}">
                            <StackPanel>
                                <Button Content="â–¶ Start Valuation" Padding="30,15" FontSize="16" FontWeight="SemiBold"
                                       Background="{StaticResource AccentBrush}" Foreground="White"
                                       HorizontalAlignment="Left"/>
                                
                                <TextBlock Text="Performance Metrics" FontWeight="SemiBold" Margin="0,20,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="GPU Upload:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                                    <TextBlock Text="N/A" Grid.Row="0" Grid.Column="1" Foreground="Gray"/>
                                    
                                    <TextBlock Text="Computation:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                                    <TextBlock Text="N/A" Grid.Row="1" Grid.Column="1" Foreground="Gray"/>
                                    
                                    <TextBlock Text="Throughput:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                                    <TextBlock Text="N/A" Grid.Row="2" Grid.Column="1" Foreground="Gray"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8F8F8" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="GPU: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="Not Initialized" VerticalAlignment="Center" Margin="5,0,20,0" Foreground="Gray"/>
                    <TextBlock Text="VRAM: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="0 MB / 0 MB" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
